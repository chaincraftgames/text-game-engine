{
  "name": "@chaincraft/text-game-engine",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core/": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/*.d.ts"
    },
    "./core/*": {
      "import": "./dist/core/*",
      "types": "./dist/core/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.json --verbose",
    "start": "node dist/index.js",
    "start-cli-server": "node dist/interfaces/cli/cli-server.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc-watch --onSuccess 'npm run start'",
    "watch-cli-server": "tsc-watch --onSuccess 'npm run start-cli-server'",
    "cli": "npm run build && node dist/interfaces/cli/cli-client.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "bitecs": "file:~/dev/projects/bitECS/dist",
    "module-alias": "^2.2.3",
    "node-fetch": "^3.3.2",
    "uuid": "^11.0.3"
  },
  "imports": {
    "#core/*": "./dist/core/*"
  }
}
